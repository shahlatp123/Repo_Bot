  	  // WINDOW HANDLING
	     
  	   String parentwindow = driver.getWindowHandle();     //php site
  	    // System.out.println("parent handle id="+ parentwindow);
  	    
  	    Set <String> allwindows = driver.getWindowHandles();
  		//System.out.println("Displaying all handles..........");

  		
  		allwindows.remove(parentwindow);
  		String secondwindow = allwindows.iterator().next();      //fetching new window  new handle=child handle
  		driver.switchTo().window(secondwindow);       //switch the control to that window
  	 
  		Thread.sleep(3000);
  		
  	    driver.findElement(By.id("email")).sendKeys("abhinandprakash.ap@gmail.com");
  	  Thread.sleep(3000);
  	  
  	   driver.findElement(By.id("password")).sendKeys("abhi96#*@96");
  	 Thread.sleep(3000);
  	 
  	 
  	 driver.findElement(By.xpath("//*[@id=\"login-form\"]/div[4]/button/span[1]")).click();
  	Thread.sleep(3000);
  	
  	
  	
  	
  	
